<!--        <Content Include="lib\net8.0\gdx2d.dll">-->
<!--          <CopyToOutputDirectory>Always</CopyToOutputDirectory>-->
<!--        </Content>-->
<!--    </ItemGroup>-->

    <ItemGroup>
        <Content Include="runtimes\**\*.*">
            <Pack>true</Pack>
            <PackagePath>runtimes</PackagePath>
        </Content>
    </ItemGroup>

    <ItemGroup>
      <Folder Include="Lugh\Graphics\Drawing\" />
    </ItemGroup>

    <ItemGroup>
      <Reference Include="LughUtils">
        <HintPath>..\..\LughUtils\bin\Debug\net8.0\LughUtils.dll</HintPath>
      </Reference>
    </ItemGroup>

</Project>
